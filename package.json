{
  "name": "@myownradio/myownradio-service",
  "version": "1.0.0",
  "scripts": {
    "dev:fileserver-local": "env-cmd -f ./env/fileserver-local.env -- yarn --cwd packages/fileserver-local run dev",
    "start:fileserver-local": "env-cmd -f ./env/fileserver-local.env -- yarn --cwd packages/fileserver-local start",
    "dev:audio-uploader": "env-cmd -f ./env/audio-uploader.env -- yarn --cwd packages/audio-uploader run dev",
    "start:audio-uploader": "env-cmd -f ./env/audio-uploader.env -- yarn --cwd packages/audio-uploader start",
    "dev": "concurrently -n w: npm:dev:*",
    "migrate": "knex migrate:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pldin601/myownradio-service.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "env-cmd": "^10.0.1",
    "eslint-plugin-jest": "^23.6.0"
  },
  "dependencies": {
    "concurrently": "^5.1.0",
    "knex": "^0.20.9",
    "pg": "^7.18.1"
  }
}
