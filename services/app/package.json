{
  "name": "@myownradio/myownradio-service",
  "version": "1.0.0",
  "scripts": {
    "dev:fileserver-local": "env-cmd -f ./env/fileserver-local.env -- yarn --cwd packages/fileserver-local run dev",
    "start:fileserver-local": "env-cmd -f ./env/fileserver-local.env -- yarn --cwd packages/fileserver-local start",
    "dev:audio-uploader": "env-cmd -f ./env/audio-uploader.env -- yarn --cwd packages/audio-uploader run dev",
    "start:audio-uploader": "env-cmd -f ./env/audio-uploader.env -- yarn --cwd packages/audio-uploader start",
    "dev:auth-server": "env-cmd -f ./env/auth-server.env -- yarn --cwd packages/auth-server run dev",
    "start:auth-server": "env-cmd -f ./env/auth-server.env -- yarn --cwd packages/auth-server start",
    "dev:overlay-proxy": "env-cmd -f ./env/overlay-proxy.env -- yarn --cwd packages/overlay-proxy run dev",
    "start:overlay-proxy": "env-cmd -f ./env/overlay-proxy.env -- yarn --cwd packages/overlay-proxy start",
    "dev:frontend": "yarn --cwd packages/frontend run dev",
    "start:frontend": "yarn --cwd packages/frontend start",
    "dev": "concurrently -n w: npm:dev:*",
    "migrate": "knex migrate:latest",
    "format": "prettier --write packages/**/*.{js,jsx}",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pldin601/myownradio-service.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^5.1.0",
    "env-cmd": "^10.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "jest": "^25.1.0",
    "knex": "^0.20.9",
    "pg": "^7.18.1",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "yarn": "^1.22.0"
  }
}
